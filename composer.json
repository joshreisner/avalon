{
    "name": "joshreisner/avalon",
    "description": "",
    "authors": [
        {
            "name": "Josh Reisner",
            "email": "josh@joshreisner.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "4.*",
        "doctrine/dbal": "2.*",
        "intervention/image": "2.*"
    },
    "autoload": {
        "classmap": [
            "src/controllers",
            "src/libraries",
            "src/migrations"
        ],
        "psr-0": {
            "Joshreisner\\Avalon\\": "src/"
        }
    },
    "scripts": {
    	"post-install-cmd": [
    		"php artisan config:publish joshreisner/avalon",
    		"php artisan migrate --package=joshreisner/avalon",
    		"php artisan asset:publish"
    	],
    	"post-update-cmd": [
    		"php artisan migrate --package=joshreisner/avalon",
    		"php artisan asset:publish"
    	],
    },
    "minimum-stability": "dev"
}
